<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-localization-strings-8" version="2.0.0">
  <name>Localization</name>
  <description>Experimental cordova Plugin for localizing local strings</description>
  <license>MIT License</license>
  <keywords>cordova,internationalization,localization,i18n,l10n</keywords>

  <engines>
    <engine name="cordova" version=">=6.0.0"/>
  </engines>

  <platform name="ios">
  	<resource-file src="res/translations/ios/en.lproj" target="en.lproj" />
    <resource-file src="res/translations/ios/ru.lproj" target="ru.lproj" />
  </platform>
  <!--<hook src="scripts/create_strings.js" type="after_prepare" />-->

</plugin>
